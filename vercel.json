{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/v1/chat.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/webhooks/whatsapp.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/webhooks/telegram.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/webhooks/incoming.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/v1/chat",
      "dest": "/api/v1/chat"
    },
    {
      "src": "/api/webhooks/whatsapp",
      "dest": "/api/webhooks/whatsapp"
    },
    {
      "src": "/api/webhooks/telegram",
      "dest": "/api/webhooks/telegram"
    },
    {
      "src": "/api/webhooks/incoming",
      "dest": "/api/webhooks/incoming"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
} 